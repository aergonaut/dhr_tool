<div class="prose mb-10">
  <h1>Unfurl a link</h1>
  <p>Paste a URL to unfurl it into a text snippet describing the content at the link.
</div>

<%= form_with(url: tools_links_path, class: "mx-auto mb-10", data: { controller: "link" }) do |f| %>
  <div class="mb-5">
    <%= f.label :url, "URL", class: "block mb-2 text-sm font-medium text-gray-900" %>
    <%= f.text_field :url, class: "border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", data: { link_target: "url" } %>
  </div>
  <div class="space-x-2">
    <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Submit</button>
    <button type="button" data-action="link#clear" class="py-2.5 px-5 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200">Clear</button>
  </div>
<% end %>

<div id="results" class="prose max-w-prose">
</div>
